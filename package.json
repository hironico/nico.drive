  "author": "about.hironico.net",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "exif": "^0.6.0",
    "express": "^4.21.2",
    "express-basic-auth": "^1.2.1",
    "helmet": "^8.1.0",
    "helmet-csp": "^4.0.0",
    "prom-client": "^15.0.0",
    "sharp": "^0.33.4",
    "ts-node": "^10.9.1",
    "webdav-server": "^2.6.2",
    "xml2js": "^0.5.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/archiver": "^6.0.3",
    "@types/cors": "^2.8.10",
