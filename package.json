{
  "name": "nico.drive",
  "version": "7.12.0",
  "description": "WebDav Server with cool user interface for web and mobile.",
  "main": "dist/src/index.js",
  "scripts": {
    "prebuild": "eslint --fix src/** --ignore-pattern src/**/*.js",
