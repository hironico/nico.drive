    "@types/node": "^22.12.0",
    "@types/sharp": "^0.27.1",
    "@types/xml2js": "^0.4.8",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8.56.0",
    "eslint-plugin-jest": "^28.8.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "ts-jest": "^29.2.5",
    "typescript": "^4.9.5"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
